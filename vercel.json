{
    "version": 2,
    "name": "douce-tentation",
    "builds": [
        {
            "src": "src/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "src/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "DB_TYPE": "supabase"
    },
    "crons": [
        {
            "path": "/api/orders/sync",
            "schedule": "*/10 * * * *"
        }
    ]
}